<h1>New Article</h1>

<%= form_with(model: @article, local: true) do |form| %>
  <% if @article.errors.any? %>
    <div class="errors">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>
      <ul>
        <% @article.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title, "Article Title" %>
    <%= form.text_field :title, class: "input", placeholder: "Enter title" %>
  </div>

  <div class="field">
    <%= form.label :content, "Article Content" %>
    <%= form.text_area :content, class: "textarea", placeholder: "Write the article content here" %>
  </div>

  <div class="actions">
    <%= form.submit "Create Article", class: "button is-primary" %>
  </div>
<% end %>

<%= link_to "Back to Articles", articles_path, class: "button" %>

